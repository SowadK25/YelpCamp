<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div><a href="/campgrounds/new">Add Campground</a></div>
<% for (let camp of campgrounds) { %>
    <div class="card">
        <civ class="row">
            <div class="col-md-4">
                <% if(camp.images.length) { %>
                <img class="img-fluid" src="<%= camp.images[0].url %>" alt="">
                <% } else {%>
                    <img src="https://res.cloudinary.com/de58ttsxq/image/upload/v1696209054/YelpCamp/o74svx6ckup7rynydbag.jpg" alt="">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text"><%= camp.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= camp.location %></small>
                    </p>
                    <a href="campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %></a>
                </div>
            </div>
        </civ>
    </div>
<% } %>       
